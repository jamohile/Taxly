<div class="<%= (item.expense ? 'item proto expense' : "item proto income") %>">
    <label><%= item.name %></label>
    <form class="update" method="post" action= <%= "/items/" + item.id %>>
        <input value="<%= item.name %>" name="name" type="text" placeholder="Name" required>
        <input type="submit" value="Save">
    </form>
    <form class="delete" action= <%= "/items/" + item.id + "/delete" %>>
        <input value="Delete" type="submit">
    </form>
</div>
